<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/teal_200"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_notifications_black_24dp"
        android:drawablePadding="25dp"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="something_went_wrong"
        android:textColor="@color/purple_700"
        android:textSize="16dp"
        android:visibility="visible"
         />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_error_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_error"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text=""
        android:textColor="@color/design_default_color_error"
        android:textSize="16dp"
        android:visibility="visible"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_try"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/txt_error_msg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:stateListAnimator="@null"
        android:text="try_again"
        android:textAllCaps="true"
        android:visibility="visible" />

</RelativeLayout>